---
import LinkPersonne from "../../components/LinkPersonne.astro";
import Layout from "../../layout/Layout.astro";
export const prerender = false;

const personnes = await Astro.locals.pb.collection('Personne').getFullList();
---
<Layout>
	<h1>Hey personnes</h1>
    <ul>
        {personnes.map((personne) => (
            <li><LinkPersonne personne = {personne}/></li>
        ))}
    </ul>
    { 
    Astro.locals.pb.authStore.isValid &&
    <a href="/personnes/edit/">Ajouter une nouvelle personne</a>
    }
</Layout>
